local P, T, CG = game.Players.LocalPlayer, game:GetService("TeleportService"), game:GetService("CoreGui")

-- X√≥a b·∫£n c≈© ƒë·ªÉ tr√°nh l·ªói
if CG:FindFirstChild("DatDepTraiMenu") then CG.DatDepTraiMenu:Destroy() end

local G = Instance.new("ScreenGui", CG); G.Name = "DatDepTraiMenu"; G.ResetOnSpawn = false
local F = Instance.new("Frame", G); F.Size = UDim2.new(0, 240, 0, 160); F.Position = UDim2.new(0.5, -120, 0.2, 0); F.BackgroundColor3 = Color3.fromRGB(15, 15, 15); F.BorderSizePixel = 4; F.Active, F.Draggable = true, true
Instance.new("UICorner", F).CornerRadius = UDim.new(0, 15)

-- Hi·ªáu ·ª©ng vi·ªÅn 7 m√†u (RGB)
spawn(function()
    while task.wait() do
        local hue = tick() % 5 / 5
        F.BorderColor3 = Color3.fromHSV(hue, 1, 1)
    end
end)

local Title = Instance.new("TextLabel", F); Title.Text = "MENU BY: DATDEPTRAI"; Title.Size = UDim2.new(1, 0, 0, 30); Title.Position = UDim2.new(0, 0, 0, -35); Title.BackgroundTransparency = 1; Title.TextColor3 = Color3.new(1, 1, 0); Title.Font = "SourceSansBold"; Title.TextSize = 22

local function Add(txt, pos, clr, fn)
    local b = Instance.new("TextButton", F); b.Text = txt; b.Size = UDim2.new(1, -20, 0, 50); b.Position = pos; b.BackgroundColor3 = clr; b.Font = "SourceSansBold"; b.TextSize = 22; b.TextColor3 = Color3.new(1, 1, 1); Instance.new("UICorner", b).CornerRadius = UDim.new(0, 10); b.MouseButton1Click:Connect(fn)
end

-- Ch·ªâ gi·ªØ 2 n√∫t: V√†o l·∫°i Map v√† Tho√°t Game
Add("üîÑ V√ÄO L·∫†I MAP", UDim2.new(0,10,0,20), Color3.fromRGB(0, 120, 255), function() T:Teleport(game.PlaceId, P) end)
Add("‚ùå THO√ÅT GAME", UDim2.new(0,10,0,90), Color3.fromRGB(200, 0, 0), function() P:Kick("Tho√°t b·ªüi datdeptrai!") end)
