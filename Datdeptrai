local P, T, CG = game.Players.LocalPlayer, game:GetService("TeleportService"), game:GetService("CoreGui")

-- 1. X√≥a b·∫£n c≈© ƒë·ªÉ tr√°nh k·∫πt Menu
if CG:FindFirstChild("DatDepTraiMenu") then CG.DatDepTraiMenu:Destroy() end

local G = Instance.new("ScreenGui", CG)
G.Name = "DatDepTraiMenu"
G.ResetOnSpawn = false

-- 2. Khung vi·ªÅn SI√äU TO (Vi·ªÅn RGB)
local F = Instance.new("Frame", G)
F.Size = UDim2.new(0, 240, 0, 220)
F.Position = UDim2.new(0.5, -120, 0.2, 0)
F.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
F.BorderSizePixel = 4
F.Active, F.Draggable = true, true
Instance.new("UICorner", F).CornerRadius = UDim.new(0, 15)

-- 3. V√≤ng l·∫∑p 7 M√ÄU (RGB) cho Vi·ªÅn
spawn(function()
    while task.wait() do
        local hue = tick() % 5 / 5
        F.BorderColor3 = Color3.fromHSV(hue, 1, 1)
    end
end)

-- 4. Nh√£n t√™n t√°c gi·∫£
local Title = Instance.new("TextLabel", F)
Title.Text = "MENU BY: DATDEPTRAI"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Position = UDim2.new(0, 0, 0, -35)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.new(1, 1, 0)
Title.Font = "SourceSansBold"
Title.TextSize = 22
Title.TextStrokeTransparency = 0

-- 5. H√†m t·∫°o n√∫t b·∫•m
local function Add(txt, pos, clr, fn)
    local b = Instance.new("TextButton", F)
    b.Text = txt
    b.Size = UDim2.new(1, -20, 0, 50)
    b.Position = pos
    b.BackgroundColor3 = clr
    b.Font = "SourceSansBold"
    b.TextSize = 22
    b.TextColor3 = Color3.new(1, 1, 1)
    b.TextStrokeTransparency = 0
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 10)
    b.MouseButton1Click:Connect(fn)
end

-- üõ† S·ª¨A L·ªñI DIE: D√πng c√°ch x√≥a s·∫°ch Character Parts
Add("üíÄ CH·∫æT & RESET", UDim2.new(0,10,0,20), Color3.fromRGB(255, 100, 0), function()
    if P.Character then
        -- C√°ch Die m·∫°nh nh·∫•t: X√≥a c√°i ƒë·∫ßu ho·∫∑c x√≥a h·∫øt b·ªô ph·∫≠n
        P.Character:ClearAllChildren() 
    end
end)

Add("üîÑ V√ÄO L·∫†I MAP", UDim2.new(0,10,0,85), Color3.fromRGB(0, 120, 255), function() 
    T:Teleport(game.PlaceId, P) 
end)

Add("‚ùå THO√ÅT GAME", UDim2.new(0,10,0,150), Color3.fromRGB(200, 0, 0), function() 
    P:Kick("Tho√°t b·ªüi datdeptrai!") 
end)
